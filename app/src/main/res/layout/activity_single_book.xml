<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".single_book.SingleBook">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>

    <TextView
        android:id="@+id/txt_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="Connection Problem!!!"
        android:visibility="gone"
        />

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_title"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_maturity_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_maturity_rating"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_published_date"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_page_count"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_author"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_average_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_average_rating"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_categories"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/book_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book_desc"
                android:textStyle="bold"
                android:textSize="18sp"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>